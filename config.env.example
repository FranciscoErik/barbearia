# Configurações do Servidor
PORT=3000
NODE_ENV=development

# Configurações do Banco de Dados
DB_PATH=./database/barbearia.db

# Configurações de Autenticação
JWT_SECRET=sua_chave_secreta_super_segura_aqui
JWT_EXPIRES_IN=24h

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Mercado Pago
# Obtenha seu Access Token em: https://www.mercadopago.com.br/developers/panel/credentials
MERCADOPAGO_ACCESS_TOKEN=seu_access_token_do_mercadopago_aqui

# URLs (ajuste conforme seu ambiente)
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Para produção, use:
# BASE_URL=https://seudominio.com
# FRONTEND_URL=https://seudominio.com

